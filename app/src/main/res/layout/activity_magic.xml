<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <View
        android:id="@+id/top_fix"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_maigicview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:scrollIndicators="start"
        app:layout_constraintTop_toBottomOf="@+id/top_fix" />

    <android.support.v4.view.ViewPager
        android:id="@+id/magic_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#220492fb"
        app:layout_constraintTop_toBottomOf="@+id/magic_maigicview" />

</android.support.constraint.ConstraintLayout>
